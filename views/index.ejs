<!DOCTYPE html>
<html>
<head>
  <title><%= title %></title>
  <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.6.3/css/font-awesome.min.css" />
  <link rel="stylesheet" type="text/css" href="/css/app.css" />
</head>
<body>
  <div class="tasks">
    <div class="tasks__title">ToDo App</div>
    <div class="tasks__header">
      <div class="tasks__add-button"><i class="fa fa-plus-square-o fa-2x"></i></div>
      <input class="tasks__input" placeholder="Add some task..."></input>
    </div>
    <div class="tasks__list">
      <% for (var i = 0; i < tasks.length; i++) {%>
        <div class="task <%= tasks[i].isDone ? 'task_done' : '' %>" data-id="<%= tasks[i].id %>">
          <div class="task__checkbox"><i class="fa <%= tasks[i].isDone ? 'fa-check-square-o' : 'fa-square-o' %>"></i></div>
          <span class="task__text"><%= tasks[i].name %></span>
          <div class="task__delete-button"><i class="fa fa-times"></i></div>
        </div>
      <% } %>
    </div>
  </div>
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
  <script src="/js/app.js"></script>
</body>
</html>